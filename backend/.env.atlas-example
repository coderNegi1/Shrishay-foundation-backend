# Example .env for MongoDB Atlas
NODE_ENV=development
PORT=5000

# MongoDB Atlas Configuration (replace with your actual connection string)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/shrishay-foundation?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Cookie Configuration
COOKIE_EXPIRE=7

# Admin Seed Configuration
ADMIN_EMAIL=admin@shrishay.org
ADMIN_PASSWORD=Admin@123456

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/mpeg,video/quicktime
